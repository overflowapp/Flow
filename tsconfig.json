{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "preserveConstEnums": true,
        "removeComments": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "baseUrl": ".",
      "importHelpers": true,
      "outDir": "build",
      "target": "es5",
      "resolveJsonModule": true,
      "sourceMap": true,
    },
    "exclude": [
      "node_modules",
      "build"
    ]
}
  